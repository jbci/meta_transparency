<%= simple_form_for(@app_attribute) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :mandatory %>
    <%= f.input :default_value %>
    <%= f.association :attribute_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
