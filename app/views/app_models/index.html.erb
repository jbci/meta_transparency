<p id="notice"><%= notice %></p>

<h1>App Models</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Plural</th>
      <th>Main model</th>
      <th>Attributes</th>
      <th>Model type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_models.each do |app_model| %>
      <tr>
        <td><%= app_model.name %></td>
        <td><%= app_model.plural %></td>
        <td><%= app_model.main_model %></td>
        <td><%= app_model.app_attributes.count %></td>
        <td><%= app_model.model_type %></td>
        <td><%= link_to 'Show', app_model %></td>
        <td><%= link_to 'Edit', edit_app_model_path(app_model) %></td>
        <td><%= link_to 'Destroy', app_model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App Model', new_app_model_path %>
