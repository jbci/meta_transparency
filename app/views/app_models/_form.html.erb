<%= simple_form_for(@app_model) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :plural %>
    <%= f.association :model_type %>
    <%= f.input :main_model %>
  </div>

  <div class="row app_model_fields">
    <table class="table">
        <thead>
          <tr>
            <th>Mandatory</th>
            <th>Name</th>
            <th>Type</th>
            <th>Mark for delete</th>
          </tr>
        </thead>
        <tbody>
          <%= f.fields_for :app_attributes do |builder| %>
            <%= render 'app_attribute_fields', :f => builder %>
          <% end %>
        </tbody>
    </table>
  </div>
  <%= link_to_add_association "+ attributo ", f, :app_attributes, data: { 'association-insertion-method': 'append', 'association-insertion-node': '.app_model_fields' } %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
